<!DOCTYPE html>
<html lang="nl">

<head>
    <%- include('./partials/head'); -%>
</head>

<body>
    <main>
        <div class="chatwith">
            <p>Aan:</p>
            <p>Username</p>
        </div>
        <form class="username" action="">
          <input id="username"  autocomplete="off" placeholder="Gebruikersnaam.." /><button>Send</button>
        </form>
        <div id="chatoverview">
            <ul id="messages"></ul>
        </div>
        <form action="">
          <input id="m" autocomplete="off" placeholder="Bericht.." data-emojiable="true" />
          <img src="img/Dictation.svg" alt=""><button>Send</button>
        </form>

    </main>
    <footer>
    </footer>

    <script src="../scripts/main.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
        $(function () {
            var socket = io();
            $('form').submit(function (e) {
                e.preventDefault(); // prevents page reloading
                socket.emit('chat message', $('#m').val());
                $('#m').val('');
                return false;
            });
        });
    </script>

</body>


</html>